---
export interface Props {
	title: string;
}

const { title: title } = Astro.props;
---

<div class="d-flex flex-row items-center">
    <hr class="flex-1 mb-4 flex-fill items-center border border-light border-solid border-1">
    {title && 
        <h3 class="me-2 ms-2 text-center">{title}</h3>
    }

    <hr class="flex-1 mb-4 flex-fill items-center border border-light border-solid border-1">
</div>