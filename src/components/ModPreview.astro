---
export interface Props {
	mod: any;
}

import { getThumbnail, getSlug } from '../utils.ts'

const { mod: mod } = Astro.props;
---

<div class="m-2" style="flex: 1 1 0; min-width: 300px; max-width: 500px;">
    <div class="p-2 pb-1 card bg-secondary h-100">
        <div class="d-flex flex-column text-center h-100">
            <a href={"/mods/" + getSlug(mod)}>
                <h5 class="text-center">{mod.name}</h5>
                <div class="pb-2">
                    <img class="bg-black bg-opacity-50" style="object-fit: contain" src={getThumbnail(mod)} alt={mod.name} width="400" height="200" loading="eager">
                </div>
            </a>
            <div class="flex-grow-1"></div>
            <div class="bg-black bg-opacity-25 p-1 mb-1">
                <div style="height: 80px; max-height:80px; overflow: hidden; text-overflow:ellipsis; whitespace: nowrap" class="d-block align-text-top">
                <p>{mod.description}</p> 
                </div>
                <div class="opacity-50 ">
                    <p class="mb-0"><i>By {mod.author} â€¢ {mod.downloads} downloads</i></p>  
                </div>
            </div>

        </div>
    </div>
</div>